   SELECT *, TIMESTAMPDIFF(YEAR, TTL, NOW()) AS TAHUN FROM `pegawai` WHERE (Status_pensiun = '' OR Status_pensiun IS NULL) HAVING TAHUN BETWEEN 20 AND 30 


      UPDATE `pegawai` SET Status_pensiun = 'pensiun' WHERE TIMESTAMPDIFF(YEAR, TTL, NOW()) >= 60