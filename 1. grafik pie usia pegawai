2. grafik pie pendidikan
3. grafik pie guru yang mau pensiun

SELECT *, DATE_ADD(TTL, INTERVAL 60 YEAR) AS TGLPENSIUN, TIMESTAMPDIFF(MONTH, DATE_ADD(TTL, INTERVAL 60 YEAR), NOW()) AS BULAN FROM `pegawai`



 WHERE TIMESTAMPDIFF(MONTH, DATE_ADD(TTL, INTERVAL 60 YEAR), NOW())

 SELECT *, DATE_ADD(TTL, INTERVAL 60 YEAR) AS TGLPENSIUN, TIMESTAMPDIFF(MONTH, DATE_ADD(TTL, INTERVAL 60 YEAR), NOW()) AS BULAN FROM `pegawai` HAVING BULAN BETWEEN -12 AND 0 WHERE (Status_pensiun <> '' OR Status_pensiun IS NULL)


  SELECT *, DATE_ADD(TTL, INTERVAL 60 YEAR) AS TGLPENSIUN, TIMESTAMPDIFF(MONTH, DATE_ADD(TTL, INTERVAL 60 YEAR), NOW()) AS BULAN FROM `pegawai` WHERE (Status_pensiun = '' OR Status_pensiun IS NULL) HAVING BULAN BETWEEN -12 AND 0 


  SELECT *, DATE_ADD(TTL, INTERVAL 60 YEAR) AS TGLPENSIUN, TIMESTAMPDIFF(MONTH, DATE_ADD(TTL, INTERVAL 60 YEAR), NOW()) AS BULAN FROM `pegawai` WHERE (Status_pensiun = '' OR Status_pensiun IS NULL) HAVING BULAN NOT BETWEEN -12 AND 0 


